<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_exibir_perfil_usuario"
    tools:context="com.example.bruno.bevfood.ExibirPerfilUsuarioActivity"
    android:background="@color/control_highlight">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="203dp"
            android:id="@+id/imageFuncionario"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageFuncionario"
            android:text="Nome: "
            android:textSize="16sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginTop="18dp"
            android:id="@+id/textView7" />

        <TextView
            android:id="@+id/textValor2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView8"
            android:layout_toEndOf="@+id/textView7"
            android:layout_toRightOf="@+id/textView7"
            android:text="New Text"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView7"
            android:layout_marginTop="18dp"
            android:layout_alignLeft="@+id/textView7"
            android:textColor="#000000"
            android:textStyle="bold"
            android:text="Cargo: "
            android:textSize="16sp"
            android:id="@+id/textView8" />

        <TextView
            android:id="@+id/textCargo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textValor2"
            android:layout_alignStart="@+id/textValor2"
            android:layout_alignTop="@+id/textView8"
            android:text="New Text"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email: "
            android:id="@+id/textView9"
            android:textSize="16sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_below="@+id/textView8"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="18dp" />

        <TextView
            android:id="@+id/textEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textCargo"
            android:layout_alignStart="@+id/textCargo"
            android:layout_alignTop="@+id/textView9"
            android:text="New Text"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="16sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/btEditar"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_alignBaseline="@+id/textView7"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="18dp"
            android:text="Editar" />

        <Button
            android:id="@+id/btRemover"
            android:layout_width="99dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/btEditar"
            android:text="Remover" />

    </RelativeLayout>

</ScrollView>
