<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/control_highlight"
    tools:context=".CadastroProdutoActivity">

    <EditText
        android:id="@+id/editDescricao"
        android:layout_width="347dp"
        android:layout_height="77dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="198dp"
        android:ems="10"
        android:hint="Descrição"
        android:inputType="textMultiLine"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editValor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/editDescricao"
        android:layout_marginTop="167dp"
        android:ems="10"
        android:hint="Valor"
        android:inputType="numberDecimal"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editNomeProd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/editDescricao"
        android:layout_marginTop="101dp"
        android:ems="10"
        android:hint="Nome do Produto"
        android:inputType="textPersonName"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="274dp"
        android:layout_height="39dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/editDescricao"
        android:layout_marginTop="29dp"
        android:text="Cadastro de Produto"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonSalvarProd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="64dp"
        android:text="Cadastrar"
        android:textColor="#507685" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/editDescricao"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="148dp"
        android:text="Disponibilidade"
        android:textOff="Indisponivel"
        android:textOn="Disponivel"
        android:textStyle="bold|italic"
        tools:checked="false" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Disponivel"
        android:id="@+id/textView"
        android:layout_below="@+id/switch1"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:layout_marginTop="0dp" />

</RelativeLayout>